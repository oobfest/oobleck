				|  Acts
			a.dash-nav-item(href="/badges")
				span.far.fa-map.fa-lg.fa-fw &nbsp;
				|  Badges
			a.dash-nav-item(href="/calendar") 
				span.far.fa-calendar-alt.fa-lg.fa-fw &nbsp;
				|  Calendar
			//a.dash-nav-item(href="/hosts")
				span.far.fa-laugh.fa-lg.fa-fw &nbsp;
				|  Hosts
			a.dash-nav-item(href="/volunteers")
				span.far.fa-heart.fa-lg.fa-fw &nbsp;
				|  Volunteers
			a.dash-nav-item(href="/workshops") 
				span.far.fa-lightbulb.fa-lg.fa-fw &nbsp;
				|  Workshops

		if isAdmin
			hr.dash-nav-divider
			a.dash-nav-item(href="/users")
				span.far.fa-user-circle.fa-lg.fa-fw &nbsp;

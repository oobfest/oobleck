extends ../_layout
block content
	header.dash-titlebar
		.mb-md-0.mb-3
			span.dash-titlebar-title 
				a.text-muted(href="/submissions") Submissions
				|  /
				| Submission Reviews

	.dash-boxes.container-fluid
		.box.box-b
			table.box-table.table
				thead
					tr
						th Reviewer
						th Score
						th Notes
				tbody
					for review in submission.reviews
						tr
							td=review.username
							td
								+showReview(review.score)
							td=review.notes

mixin showReview(score)
	case score
		when  2: |😍 Yes!
		when  1: |😬 Meh
		when  0: |😕 Nah
		when -1: |😡 Veto
		default: break

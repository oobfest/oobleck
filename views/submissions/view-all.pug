extends ../_layout
block content
	header.dash-titlebar
		.mb-md-0.mb-3
			span.dash-titlebar-title Submissions
		a.btn.btn-secondary.ml-md-auto(href="/submissions/create") Create Submission

	.dash-boxes.container-fluid
		.row
			.col
				ul.nav.nav-pills
					li.nav-item
						a.nav-link.active(data-toggle="tab" href="#submissions") Submissions
					li.nav-item
						a.nav-link(data-toggle="tab" href="#demographics") Demographics
				.tab-content
					include partials/submissions
					include partials/demographics


mixin renderReviews(reviews)
	for review in reviews
		case review.score
			when  2: |😍
			when  1: |😬
			when  0: |😕
			when -1: |😡
			default: break
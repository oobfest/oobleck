extends ../_layout
block content
  header.dash-titlebar
    .mb-md-0.mb-3
      span.dash-titlebar-title Acts
    a.btn.btn-secondary.ml-md-auto(href="/acts/create") Create Act

  .dash-boxes.container-fluid
    if (acts.length == 0)
      p There are none!
    else
      .box.box-b
        table.box-table.table
          thead
            tr
              th
              th Name
              th Type
              th Shows
          tbody
            for act in acts
              tr
                td.text-center
                  pre.h3=act.confirmationStatus === 'no' ? '‚õîÔ∏è' : act.confirmationStatus === 'reschedule' ? 'üö∏' : act.confirmationStatus === 'yes' ? '‚úÖ' : ''
                td
                  a(href="/submissions/accept/"+act._id)=act.actName
                td=act.showType
                td
                  for show in shows
                    for showAct in show.acts
                      ul
                        if (showAct._id == String(act._id))
                          li
                            a(href="#") #{show.day}, #{show.venue}
extends ../_layout
block content
	header.dash-titlebar
		.mb-md-0.mb-3
			span.dash-titlebar-title Submissions
		.btn-group.ml-md-auto
			a.btn.btn-secondary(href="/submissions/create") Create Submission
			a.btn.btn-secondary(href="/submissions/standardize") Standardize

	.dash-boxes.container-fluid
		.row
			.col
				ul.nav.nav-pills
					li.nav-item
						a.nav-link.active(data-toggle="tab" href="#submissions") Submissions
					li.nav-item
						a.nav-link(data-toggle="tab" href="#charts") Charts
					li.nav-item
						a.nav-link(data-toggle="tab" href="#reviewers") Reviewers
				.tab-content
					script(src="/js/vue.min.js")
					script(src="/js/axios.min.js")
					include partials/submissions
					include partials/charts
					include partials/reviewers

mixin renderReviews(reviews)
	for review in reviews
		case review.score
			when  2: |😍
			when  1: |😬
			when  0: |😕
			when -1: |😡
			default: break
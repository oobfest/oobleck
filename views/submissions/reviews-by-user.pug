extends ../_layout
block content
	header.dash-titlebar
		.mb-md-0.mb-3
			span.dash-titlebar-title
				a.text-muted(href="/submissions") Submissions
				|  /
				| Reviews by User

	.dash-boxes.container-fluid
		.row
			.col-md
				.card.text-center.mb-3
					.card-body
						p.card-title Yes 😍
						h3.card-text=votes.yes
			.col-md
				.card.text-center.mb-3
					.card-body
						p.card-title Meh 😬
						h3.card-text=votes.meh
			.col-md
				.card.text-center.mb-3
					.card-body
						p.card-title Nah 😕
						h3.card-text=votes.nah
			.col-md
				.card.text-center.mb-3
					.card-body
						p.card-title Veto 😡
						h3.card-text=votes.veto
		.box.box-b
			.box-head.box-head-sm.box-bb
				h4 Submission Reviews by 
					code #{username}
			table.box-table.table
				thead
					tr
						th Act Name
						th Review Score
						th Review Notes
				tbody
					for submission in submissions
						- var review = submission.reviews.find(function(review){ return review.username == username})
						tr
							td=submission.actName
							td
								+renderReview(review.score)
							td=review.notes

include _render-review